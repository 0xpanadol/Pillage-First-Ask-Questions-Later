{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "dom.iterable",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "i18n/*": [
        "src/i18n/*"
      ],
      "interfaces/*": [
        "src/interfaces/*"
      ],
      "layouts/*": [
        "src/layouts/*"
      ],
      "providers/*": [
        "src/providers/*"
      ],
      "views/*": [
        "src/views/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "styles/*": [
        "src/styles/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "config/*": [
        "src/config/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
