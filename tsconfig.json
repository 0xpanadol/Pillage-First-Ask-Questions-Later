{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "dom.iterable",
      "ESNext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "helpers/*": [
        "helpers/*"
      ],
      "i18n/*": [
        "i18n/*"
      ],
      "interfaces/*": [
        "interfaces/*"
      ],
      "layouts/*": [
        "layouts/*"
      ],
      "providers/*": [
        "providers/*"
      ],
      "views/*": [
        "views/*"
      ],
      "services/*": [
        "services/*"
      ],
      "styles/*": [
        "styles/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
